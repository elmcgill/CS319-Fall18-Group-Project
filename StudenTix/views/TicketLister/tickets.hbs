<div id="auth-form" class="container">
    <div class="row align-items-center justify-content-center signup-form-container">
        <div class="col-sm-8 signup-form">
            <h1 style="padding-top: 1em">Sell Tickets</h1>
            <div class="signup-box">
                <form action="tickets/newTicket" method="POST" ref="form">
                    <div class="form-group">
                        <label for="owner">Your Name</label>
                        <input name="owner" id="owner" placeholder="Firstname Lastname" class="form-control" >
                    </div>
                    <div class="form-group">
                        <label for="ticketGame">Game</label>
                        <input name="ticketGame" id="ticketGame" placeholder="Ticket game (i.e Raiders vs Cowboys)" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="ticketStart">Start date of the game</label>
                        <input name="ticketStart" id="ticketStart" placeholder="Game start (dd/mm/yyyy hh:mm)" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="gameLocation">Location of the game</label>
                        <input name="gameLocation" id="gameLocation" placeholder="Game Location (stadium)" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="seatNumber">Seat</label>
                        <input name="seatNumber" id="seatNumber" placeholder="Ticket seat number" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for"section">Section</label>
                        <input t name="section" id="section" placeholder="Ticket Section" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input name="price" id="price" placeholder="Ticket Price" class="form-control" >
                    </div>
                    <div class="form-group">
                        <label for="type">What Sport?</label>
                        <input name="type" id="type" placeholder="Basketball/Football" class="form-control" >
                    </div>
                    <div class="form-group text-right">
                        <button type="submit" class="btn btn-submit">Post Ticket</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
